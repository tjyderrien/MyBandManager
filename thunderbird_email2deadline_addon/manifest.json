{
  "manifest_version": 2,
  "name": "Email2Deadline",
  "version": "0.1.0",
  "description": "Extract deadline dates from selected emails and export them as an .ics calendar file.",
  "applications": {
    "gecko": {
      "id": "email2deadline@local",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "messagesRead",
    "accountsRead",
    "downloads",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "deadline_extractor.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Export deadlines to ICS",
    "default_icon": "icon.svg"
  },
  "icons": {
    "64": "icon.svg"
  }
}
